#!/bin/bash

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install ImageMagick"

t=$(mktemp) && \
wget 'https://dist.1-2.dev/imei.sh' -qO "$t" && \
bash "$t" && \
rm "$t"

# Locate Bundlerâ€™s install path and remove all cached versions of rmagick
if [ -d "$BUILD_DIR/vendor/bundle" ]; then
  rm -rf $BUILD_DIR/vendor/bundle/ruby/*/gems/rmagick-*
  rm -rf $BUILD_DIR/vendor/bundle/ruby/*/specifications/rmagick-*.gemspec
fi
source $PROFILE_PATH
bundle install

echo "-----> Done updating environment variables. All set for ImageMagick."
